{
  "name": "node-rest-example",
  "version": "0.0.1",
  "description": "REST API example using NodeJS, MongoDB and Express",
  "main": "server.js",
  "scripts": {
    "db": "mongod",
    "dev": "concurrently \"yarn db\" \"ts-node ./src/server.ts\"",
    "build": "tsc",
    "start": "concurrently \"yarn db\" \"nodemon ./dist/server.js\"",
    "prod": "yarn build && yarn start",
    "mocha": "mocha --exit -r ts-node/register src/**/*.test.ts",
    "test": "concurrently \"yarn db\" \"yarn mocha\""
  },
  "keywords": ["NodeJS", "MongoDB", "Express", "REST", "API"],
  "author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
  "repository": "https://github.com/scriptex/node-rest-example",
  "bugs": {
    "url": "https://github.com/scriptex/node-rest-example/issues",
    "email": "scriptex.bg@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "expect": "^23.4.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.2",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongodb": "^3.1.1",
    "mongoose": "^5.2.3"
  },
  "private": true
}
